{
	"mnt": "/mnt/arch",
	"hostname": "deepin",
	"packages": [
		"fish",
		"caja",
		"deepin",
		"deepin-calculator",
		"community/deepin-screenshot",
		"gvfs-mtp",
		"gvfs-gphoto2",
		"transmission-gtk"
	],
	"meta": ["PYTHON", "EXTRA", "BASE"],
	"services": [
		"cups", "iptables", "acpid", "xorg", "lightdm",
		"mlocate", "fail2ban", "gpm", "networkmanager", "udisks2",
		"bluetooth", "sshd"
	],
	"users": [
		{
			"login": "adamaru",
			"home": "/home/adamaru",
			"groups": [
				"audio", "video", "lp", "wheel", "scanner", "render", "input", "games"
			],
			"shell": "/bin/zsh",
			"trizen": true,
			"commands": [
				["mkdir", "-pv", ".vim/bundle"],
				["git", "clone", "https://github.com/VundleVim/Vundle.vim.git .vim/bundle/Vundle.vim"],
				["vim", "+PluginInstall", "+qall"],
				{"env": {"HOME": "/home/adamaru"}, "cwd": "/tmp", "cmd": ["ls", "-la"]}
			]
		},
		{
			"login": "yoyo",
			"groups": ["audio", "video", "lp", "scanner", "input", "games"],
			"shell": "/bin/fish"
		}
	],
	"sudo": {
		"present": true,
		"targetpw": false,
		"nopasswd": true
	},
	"copy": [
		{
			"src": "../../dotfiles/49-passwd_global.rules",
			"dst": "/etc/polkit-1/rules.d/",
			"user": "root",
			"perms": "600"
		},
		{
			"src": "../../dotfiles/vimrc",
			"dst": "/home/adamaru/.vimrc",
			"user": "adamaru",
			"perms": "600"
		}
	]
}
