{
	"mnt": "/mnt",
	"hostname": "deepin",
	"loader": {
		"name": "refind"
	},
	"pacman": {
		"branchs": [
			"core",
			"extra",
			"community",
			"community-testing",
			"multilib",
			"multilib-testing",
			"testing"
		],
		"servers": [
			"http://192.168.2.3:8080"
		],
		"color": true
	},
	"packages": [
		"fish",
		"caja",
		"deepin",
		"deepin-calculator",
		"deepin-terminal",
		"community/deepin-screenshot",
		"gvfs-mtp",
		"gvfs-gphoto2",
		"transmission-gtk",
		"community/firefox-dark-reader",
		"community/firefox-ublock-origin"
	],
	"meta": ["PYTHON", "EXTRA", "BASE", "AUDIO", "FONTS"],
	"services": [
		"cups", "iptables", "acpid", "xorg", "lightdm",
		"mlocate", "fail2ban", "gpm", "networkmanager", "udisks2",
		"bluetooth", "sshd"
	],
	"users": [
		{
			"login": "adamaru",
			"home": "/home/adamaru",
			"groups": [
				"audio", "video", "lp", "wheel", "scanner", "render", "input", "games"
			],
			"shell": "/bin/zsh",
			"trizen": true,
			"commands": [
				["mkdir", "-pv", ".vim/bundle"],
				["git", "clone", "https://github.com/VundleVim/Vundle.vim.git", ".vim/bundle/Vundle.vim"],
				["vim", "+PluginInstall", "+qall"],
				["gpg", "--keyserver", "hkp://keyserver.ubuntu.com:80", "--recv-keys", "931FF8E79F0876134EDDBDCCA87FF9DF48BF1C90"],
				{
					"env": {"HOME": "/home/adamaru"},
					"cwd": "/tmp",
					"cmd": ["trizen", "-S", "--noedit", "--noconfirm", "aur/spotify"]
				}
			]
		},
		{
			"login": "yoyo",
			"groups": ["audio", "video", "lp", "scanner", "input", "games"],
			"shell": "/bin/fish"
		}
	],
	"sudo": {
		"present": true,
		"targetpw": false,
		"nopasswd": true
	},
	"copy": [
		{
			"src": "../../dotfiles/49-passwd_global.rules",
			"dst": "/etc/polkit-1/rules.d/",
			"user": "root",
			"perms": "600"
		},
		{
			"src": "../../dotfiles/vimrc",
			"dst": "/home/adamaru/.vimrc",
			"user": "adamaru",
			"perms": "600"
		}
	]
}
