{
	"hostname": "Kyra",
	"loader": {
		"name": "refind",
		"efi": "/EFI/refind/refind_x64.efi"
	},
	"packages": [
		"base", "base-devel", "pacman-contrib", "archlinux-keyring", "arch-install-scripts",
		"btrfs-progs", "hfsprogs", "ntfs-3g", "nfs-utils", "dosfstools", "exfat-utils",
		"hdparm", "fdisk", "testdisk", "efibootmgr",
		"networkmanager", "net-tools",
		"zsh", "tmux", "openssh", "openssl", "sshfs", "wget", "lshw",
		"p7zip", "unrar", "unzip", "zip", "lrzip",
		"vim", "git", "htop", "lolcat",
		"python", "python-pip",
		"clang", "gdb", "linux-headers", "cmake",
		"ttf-ubuntu-font-family", "ttf-liberation", "ttf-dejavu", "ttf-freefont",
		"ttf-croscore", "ttf-droid"
	],
	"services": [
		"cups", "iptables", "acpid", "fail2ban", "gpm", "networkmanager",
		"sshd", "udisks2", "bluetooth", "nginx", "smartd", "xorg"
	],
	"users": [
		{
			"login": "map",
			"home": "/home/map",
			"groups": [
				"adm", "wheel", "ftp", "http", "log", "sys", "users",
				"audio", "video", "scanner", "input", "games"
			],
			"shell": "/bin/zsh",
			"ohmyzsh": true
		}
	],
	"sudo": {
		"present": true,
		"targetpw": true,
		"nopasswd": false
	}
}
